{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build program",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",

                "-Wall",
                "-Wextra",

                "-std=c99",
                "-pedantic",

                //"-Wno-unused-parameter",

                "${workspaceFolder}/*.c",

                "-o",
                "program",

                "-lm",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger.",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ],
    "version": "2.0.0"
}